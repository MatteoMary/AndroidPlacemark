<resources>
    <style name="Theme.Athlete" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/brandPrimary</item>
        <item name="colorSecondary">@color/brandSecondary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="android:statusBarColor">@color/brandPrimary</item>

        <!-- global rounded corners -->
        <item name="shapeAppearanceSmallComponent">@style/Shape.Rounded</item>
        <item name="shapeAppearanceMediumComponent">@style/Shape.Rounded</item>
        <item name="shapeAppearanceLargeComponent">@style/Shape.Rounded</item>

        <!-- default widgets -->
        <item name="materialCardViewStyle">@style/Widget.Card</item>
        <item name="materialButtonStyle">@style/Widget.Button</item>
        <item name="textInputStyle">@style/Widget.TextInput</item>
        <item name="textInputOutlinedStyle">@style/Widget.TextInput</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
    </style>

    <style name="Shape.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="Widget.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">6dp</item>
    </style>

    <style name="Widget.Button" parent="Widget.Material3.Button">
        <item name="android:insetTop">8dp</item>
        <item name="android:insetBottom">8dp</item>
    </style>

    <style name="Widget.TextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleCentered">true</item>
    </style>
</resources>
